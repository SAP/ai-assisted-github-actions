{
  "name": "pr-review",
  "description": "GitHub Actions that creates an AI-powered code review for pull requests",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "prestart": "npm install --frozen-lockfile",
    "start": "npx tsx --env-file=.env.development src/index.ts",
    "lint": "eslint . --report-unused-disable-directives",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "@actions/core": "2.0.1",
    "@actions/github": "6.0.1",
    "@octokit/action": "7.0.2",
    "@octokit/plugin-retry": "6.1.0",
    "@octokit/plugin-throttling": "8.2.0",
    "@octokit/webhooks": "13.9.1",
    "@sap-ai-sdk/ai-api": "2.4.0",
    "@sap-ai-sdk/orchestration": "2.4.0",
    "axios": "1.13.2",
    "minimatch": "10.1.1",
    "mollitia": "0.2.0",
    "octokit": "5.0.5",
    "parse-diff": "0.11.1",
    "zod": "4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "24.10.4",
    "@vercel/ncc": "0.38.4",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "prettier": "3.7.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0",
    "yaml": "2.8.2"
  }
}
